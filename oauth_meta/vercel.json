{
  "version": 2,
  "projects": [
    {
      "name": "adai-insight-compass-frontend",
      "root": "adai-insight-compass",
      "buildCommand": "npm run build",
      "outputDirectory": "dist"
    },
    {
      "name": "meta-ads-backend",
      "root": "meta-ads-backend",
      "buildCommand": "npm install",
      "outputDirectory": "api", 
      "functions": {
        "api/**/*.js": { "runtime": "@vercel/node" }
      }
    }
  ],
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/meta-ads/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/oauth_meta/(.*)",
      "dest": "/api/index.js"
    }
  ]
}



